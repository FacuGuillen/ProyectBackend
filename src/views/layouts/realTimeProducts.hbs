<header>

</header>

<div class="container mt-4">
    <!-- Título del formulario -->
    <h1 class="text-danger text-center mb-4">Real Time Handlebars</h1>


{{!--! FORMULARIO PARA AGREGAR PRODUCTOS --}}

    <div class="div-form">
        <h3 class="h3-form">Agregar un producto</h3>
        <form class="row g-4">
            <div class="col-12">
                <label for="add-title" class="form-label">Título</label>
                <input type="text" class="form-control" id="add-title">
            </div>
            <!-- Descripción (Textarea a la izquierda) -->
            <div class="col-md-6">
                <label for="add-description" class="form-label">Descripción</label>
                <textarea class="form-control" id="add-description" rows="5" placeholder="Escribe la descripción del producto"></textarea>
            </div>
            
            <!-- Código y Producto (a la derecha) -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="add-code" class="form-label">Código</label>
                    <input type="text" class="form-control" id="add-code" placeholder="Codigo del producto">
                </div>
                <div>
                    <label for="add-price" class="form-label">Precio</label>
                    <input type="numbre" class="form-control" id="add-price" step="0.01" min="0"  placeholder="Precio del producto">
                </div>
            </div>
            
            <!-- Categoría, Estado y Stock (abajo) -->
            <div class="col-md-4">
                <label for="add-category" class="form-label">Categoría</label>
                <select id="add-category" class="form-select">
                    <option selected>Seleccione la categoría</option>
                    <option>Remera</option>
                    <option>Chomba</option>
                    <option>Musculosa</option>
                    <option>Buzo</option>
                    <option>Campera</option>
                    <option>Pantalón cargo</option>
                    <option>Pantalón baggy</option>
                    <option>Bermuda</option>
                </select>
            </div>
            
            <div class="col-md-4">
                <label for="add-state" class="form-label">Estado</label>
                <select id="add-state" class="form-select">
                    <option selected>Seleccione el estado</option>
                    <option>Activo</option>
                    <option>Inactivo</option>
                </select>
            </div>
            
            <div class="col-md-4">
                <label for="add-stock" class="form-label">Stock</label>
                <input type="number" class="form-control" id="add-stock" placeholder="Cantidad en stock">
            </div>
            
            <!-- Botón de enviar -->
            <div class="col-12">
                <button id="btn-add-product" type="submit" class="btn btn-primary">Agregar producto</button>
            </div>
        </form>
    </div>



{{!--! LISTA DE PRODUCTOS --}}
<div class="div-table">
    <h3 class="h3-form">Lista de productos</h3>
    <table class="table">
    <thead>
        <tr>
            <th scope="col">Código</th>
            <th scope="col">Titulo</th>
            <th scope="col">Descripción</th>
            <th scope="col">Categoría</th>
            <th scope="col">Stock</th>
        </tr>
    </thead>
    <tbody>
        <!-- Las filas serán generadas dinámicamente -->
    </tbody>
</table>
</div>



{{!--! FORMULARIO PARA ELIMINAR PRODUCTOS --}}

<div class="div-form-eliminar">
    <h3 class="h3-form">Eliminar un producto</h3>
    <form class="row g-4 form-eliminar">
        <!-- Código y Producto (a la derecha) -->
        <div class="col-md-8 d-flex align-items-end">
            <div class="mb-3 me-2">
                <label for="codigo" class="form-label">Código</label>
                <input type="text" class="form-control input-eliminar" id="delete-id" placeholder="Codigo del producto">
            </div>
            <div class="mb-3">
                <button id="btn-delete-product" type="submit" class="btn btn-primary">Eliminar producto</button>
            </div>
        </div>
    </form>
</div>

</div>








